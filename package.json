{
  "name": "node-pc",
  "version": "0.0.1",
  "description": "Master node pc api supports authentication and integrate with hardware devices",
  "author": "thanthevanpm3@gmail.com",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "start:inventory": "DOTENV_CONFIG_PATH=env/inventory/.env nest start inventory",
    "start:inventory:dev": "DOTENV_CONFIG_PATH=env/inventory/.env nest start inventory --debug --watch",
    "start:hardware-bridge": "DOTENV_CONFIG_PATH=env/hardware-bridge/.env nest start hardware-bridge",
    "start:hardware-bridge:dev": "DOTENV_CONFIG_PATH=env/hardware-bridge/.env nest start hardware-bridge --debug --watch",
    "start:process-worker": "DOTENV_CONFIG_PATH=env/process-worker/.env nest start process-worker",
    "start:process-worker:dev": "DOTENV_CONFIG_PATH=env/process-worker/.env nest start process-worker --debug --watch",
    "start:sync-worker": "DOTENV_CONFIG_PATH=env/sync-worker/.env nest start sync-worker",
    "start:sync-worker:dev": "DOTENV_CONFIG_PATH=env/sync-worker/.env nest start sync-worker --debug --watch",
    "start:cli": "DOTENV_CONFIG_PATH=env/cli/.env nest start cli",
    "start:cli:dev": "DOTENV_CONFIG_PATH=env/cli/.env nest start cli --debug --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config apps/inventory/test/jest-e2e.json",
    "prepare": "husky",
    "docs": "npx @compodoc/compodoc -p tsconfig.json -s",
    "generate:repository": "ts-node scripts/generate-repositories.ts",
    "generate:module": "ts-node scripts/generate-module.ts"
  },
  "dependencies": {
    "@mikro-orm/core": "^6.4.16",
    "@mikro-orm/mongo-highlighter": "^1.0.0",
    "@mikro-orm/mongodb": "^6.4.16",
    "@mikro-orm/nestjs": "^6.1.1",
    "@nestjs/bullmq": "^11.0.3",
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/microservices": "^11.1.3",
    "@nestjs/mongoose": "^11.0.3",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/platform-socket.io": "^11.1.3",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/websockets": "^11.1.3",
    "axios": "^1.11.0",
    "bcrypt": "^6.0.0",
    "bullmq": "^5.56.8",
    "cache-manager": "^7.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "compression": "^1.8.0",
    "cookie-parser": "^1.4.7",
    "cron": "4.3.0",
    "csv-parse": "^6.0.0",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.0",
    "helmet": "^8.1.0",
    "mongoose": "^8.16.2",
    "mqtt": "^5.13.2",
    "nest-commander": "^3.17.0",
    "nestjs-cls": "^6.0.1",
    "nestjs-pino": "^4.4.0",
    "node-hid": "^3.2.0",
    "pino": "^9.7.0",
    "pino-http": "^10.5.0",
    "pino-pretty": "^13.0.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "serialport": "^13.0.0",
    "socket.io": "^4.8.1",
    "split": "^1.0.1",
    "xstate": "^5.20.1"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.26",
    "@eslint/compat": "^1.3.1",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/multer": "^2.0.0",
    "@types/node": "^22.10.7",
    "@types/split": "^1.0.5",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.2.2",
    "eslint-plugin-spellcheck": "^0.0.20",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "swc-loader": "^0.2.6",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@cache(|/.*)$": "<rootDir>/libs/cache/src/$1",
      "^@common(|/.*)$": "<rootDir>/libs/common/src/$1",
      "^@config(|/.*)$": "<rootDir>/libs/config/src/$1",
      "^@culock(|/.*)$": "<rootDir>/libs/control-unit-lock/src/$1",
      "^@dals(|/.*)$": "<rootDir>/libs/dals/src/$1",
      "^@entity(|/.*)$": "<rootDir>/libs/entity/src/$1",
      "^@finger-scanner(|/.*)$": "<rootDir>/libs/finger-scanner/src/$1",
      "^@framework(|/.*)$": "<rootDir>/libs/framework/src/$1",
      "^@hid(|/.*)$": "<rootDir>/libs/hid/src/$1",
      "^@loadcells(|/.*)$": "<rootDir>/libs/loadcells/src/$1",
      "^@mapper(|/.*)$": "<rootDir>/libs/mapper/src/$1",
      "^@serialport(|/.*)$": "<rootDir>/libs/serialport/src/$1",
      "^@services(|/.*)$": "<rootDir>/libs/services/src/$1"
    }
  }
}